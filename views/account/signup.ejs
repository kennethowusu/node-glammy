
<%-include('../headers/form-header');-%>
<body>
<img src="" width="80px" height="80px" alt=""/>
  <h1 class="text-center">Create Account</h1>
  <div class="form-group">
    <form action="" class="form" method="post">
      <%if (typeof emailError !== "undefined") { %>
          <div class="form-error"><img src="/images/svg/error.svg" width="17px" height="17px"  class="mr-5" alt=""><%=emailError%></div>
      <% } %>
      <div class="input-group-field">
        <label for="" class="form-label">First name*</label>
        <input type="text"  name="firstname"  attr-name="First name" class="form-input control firstname" <%if(typeof user !== "undefined"){%>value=<%=user.firstname%> <%}%>>
      </div>

      <div class="input-group-field">
        <label for="" class="form-label ">Last name*</label>
        <input type="text" name="lastname"  attr-name="Last name"  class="form-input control lastname" <%if(typeof user !== "undefined"){%>value=<%=user.lastname%> <%}%>>
      </div>

      <div class="input-group-field">
        <label for="" class="form-label ">Email*</label>
        <input type="text" name="email"  attr-name="Email"  class="form-input control email"  <%if(typeof user !== "undefined"){%>value=<%=user.email%> <%}%>>
      </div>

      <div class="input-group-field rel">

        <span class='toggle-password js-toggle-password abs pointer'>Show</span>
        <label for="" class="form-label ">Password*</label>
        <input type="password" name="password"  attr-name="Password" class="form-input control password">
        <small>Password must contain a mininum of 6 characters</small>
      </div>
      <div class="mt-30">
        <button type="submit"  class="form-input control form-btn--rounded form-input--rounded--cinnabar rel ">Create Account </button>
      </div>

      <small class="mt-20 mb-30 in-blk">
        By clicking Create Account, you acknowledge
         you have readand agreed to our Terms of Use and
         Privacy Policy.
      </small>
      <div class="rel line-behind">
        <p class="abs line-behind--front">Already have an account?</p>
      </div>


      <div class="mt-30">
        <a href="/account/signin" class="form-input control form-input--rounded in-blk text-center">Sign In</a>
      </div>

    </form>
  </div>
</body>
<script src="/javascripts/form-script.js"></script>
</html>
